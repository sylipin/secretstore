.book-bg {
  height: 300rpx;
  background-color: #fc6d51;
}

.book-content {
  padding: 20rpx;
  margin: 0 20rpx;
  margin-top: -210rpx;
  background-color: #fff;
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
}

.book-type {
  padding-top: 20rpx;
}

.switch-type {
  display: flex;
  border: 1px solid #dedede;
  width: 240rpx;
  text-align: center;
  margin: 0 auto;
  border-radius: 40rpx;
  overflow: hidden;
}

.switch-btn {
  padding: 5rpx 20rpx;
  /* margin: 0 10rpx; */
  /* border-radius: 20rpx; */
  width: 50%;
  color: #444;
}

.active {
  background-color: #fc6d51;
  color: #fff;
}

.type-title {
  color: #dedede;
}

view .van-grid-item__content {
  padding: 0;
  /* background-color: transparent; */
}

.icon-item-content {
  height: 62rpx;
  width: 62rpx;
  border-radius: 50%;
  background-color: #eff2f541;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform .2s;
}

.checked {
  background-color: #ffaa43;
  transform: scale(1.3);
}

.type-img {
  margin: 0 auto;
}

.type-name {
  padding-top: 10rpx;
  color: #333;
}

.icons-type {
  margin-top: 26rpx;
}

.icons-type {
  font-size: 24rpx;
}

.vShow {
  display: block;
}

.vHidden {
  display: none;
}


.pay-methods {
  width: 100%;
  padding-top: 60rpx;
}

.pay-title {
  border-top: 1px solid #ddd;
  font-weight: 600;
  font-size: 28rpx;
  padding-top: 60rpx;
  color: #333;
}

.methods-content {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-around;
}

.pay-item {
  padding: 4rpx 16rpx;
  color: #ddd;
  background-color: #eff2f541;
  font-size: 24rpx;
  border-radius: 28rpx;
  line-height: 28rpx;
  transition: all .2s;
}

.pay-item.active {
  background-color: #ffaa43;
  color: #fff;
  transform: scale(1.2);
}

.pay-info {
  margin-top: 20rpx;
}
.pay-data {
  padding: 20rpx;
  padding-top: 40rpx;
  display: flex;
  line-height: 50rpx;
  font-size: 28rpx;
  height: 50rpx;
  width: 100%;
}

.pay-data-title {
  width: 100rpx;
  height: 100%;
}
.pay-data-data {
  width: 100%;
  flex: 1;
}
.picker {
  color:#ddd;
  height: 100%;
}
.amount,.note {
  color: #444;
  height: 100%;
}
.save-btn {
  width: 100%;
  padding: 20rpx 0;
  text-align: center;
  border-radius: 40rpx;
  color: #fff;
  background-color:#fc6d51 ;
  margin-top: 60rpx;
}