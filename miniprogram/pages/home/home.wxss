.home-head {
  height: 300rpx;
  /* background-color: #fc6d51; */
  background-image: linear-gradient(#fc6d51, rgba(191, 73, 73, 0.611));
  padding-top: 40rpx;
}

.home-head-content {
  width: 100%;
  /* margin-top: -260rpx;
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
  min-height: 400rpx; */
}

.home-head-text {
  width: 100%;
}

.content-title {
  color: #333;
  font-size: 32rpx;
  font-weight: 700;
  text-align: center;
}

.money {
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
  color: #feed00;
}

.int {
  font-size: 80rpx;
  font-weight: 600;
}

.decimal {
  font-weight: 400;
  font-size: 48rpx;
  line-height: 114rpx;
}

.inOrSpending {
  margin-top: 30rpx;
  display: flex;
}

.income,
.spending {
  font-size: 24rpx;
  text-align: center;
  flex: 1;
  color: #333;
}

.income {
  border-right: 2rpx solid #555;
}

.inOrSpending-money {
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #fff;
}



.details {
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
  margin-top: 10rpx;
  padding-left: 20rpx;
}

.l-text {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.r-icons {
  position: absolute;
  right: 20rpx;
  /* top: 50%;
  transform: translateY(-50%); */
  line-height: 20rpx;
}
.num {
  padding: 0 5rpx;
  color: blue;
}
.in {
  margin-left: 20rpx;
}
.out {
  margin-left: 20rpx;
}

.play-content {
  padding: 40rpx 40rpx 10rpx;
}

.play-item {
  display: flex;
  margin-bottom: 10rpx;
  padding: 10rpx 0;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #ccc;
}
.item-l {
  display: flex;
}
.img-content {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #ffaa43;
  display: flex;
  align-items: center;
  justify-content: center;
}
.play-l-text {
  margin-left: 40rpx;
}
.methods-type {
  color: #333;
  font-size: 28rpx;
}
.ps {
  color: #999;
  font-size: 24rpx;
}
.pay-type {
  color: #999;
  font-size: 24rpx;
  margin-left: 20rpx;
  border-left: 2rpx solid #ccc;
  padding-left: 20rpx;
}
.item-l-img {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}
.item-r {
  font-size: 40rpx;
}

.zhichu {
  color: red;
}
.shouru {
  color: rgb(36, 126, 0);
}

.daily-settlement {
  float: right;
  margin-right: 40rpx;
  padding-bottom: 10rpx;
}
.mrjy {
  margin-right: 20rpx;
}