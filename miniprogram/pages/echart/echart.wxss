.echart-bg {
  width: 100%;
  height: 80rpx;
}

.search-by-time {
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
  line-height: 80rpx;
  align-items: center;
  margin-top: 20rpx;
}

.time-btn {
  background-color: #fc6d51;
  border-radius: 60rpx;
  padding: 0 10rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.picker {
  background-color: #fc6d51;
  border-radius: 60rpx;
  padding: 0 10rpx;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 20rpx;
  color: #fff;
}

.time-btn-item {
  color: #ccc;
  padding: 0 16rpx;
  font-size: 24rpx;
  display: inline-block;
  height: 100%;
}

.time-btn-item.active {
  color: #fff;
  font-size: 28rpx;
  position: relative;
}

.time-btn-item.active::after {
  position: absolute;
  content: "";
  width: 0;
  height: 0;
  border: 12rpx solid transparent;
  border-bottom-color:#fff;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
}